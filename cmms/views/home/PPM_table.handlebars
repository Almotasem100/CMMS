  <div class="content">
    <div class="content_resize">
      <div id="rightarea" class="limiter">
          <div class="container-table100">
            <div class="wrap-table100">
              <div class="table100">
                <table id="hakona">
                  <thead>
                    <tr class="table100-head">
                      <th class="column3">Department</th>
                      <th class="column3">Nomenclature</th>
                      <th class="column4">Serial_no</th>
                      <th class="column4">ID</th>
                      <th class="column4">Time Period</th>
                      <th class="column3">From-date</th>
                      <th class="column4">To-date</th>
                      <th class="column3">Assigned-To</th>
                      <th class="column4">PPM-task</th>
                      <th class="column4">Contract-ID</th>
                      <th class="column4">Status</th>
                    </tr>
                  </thead>

                    <tbody>
                    {{#each ppm}}
                      <tr>
                        <td class="column3">{{department}}</td>
                        <td class="column3">{{nomenclature}}</td>
                        <td class="column4">{{serial_no}}</td>
                        <td class="column4">{{ppm_id}}</td>
                        <td class="column4">{{time_period}}</td>
                        <td class="column3">{{from_date}}</td>
                        <th class="column4">{{to_date}}</th>
                        <th class="column3">{{assigned_to}}</th>
                        <th class="column4">{{ppm_task}}</th>
                        <th class="column4">{{contract_id}}</th>
                        <th class="column4">{{status}}</th>
                      </tr>
                      {{/each}}
                    </tbody>
                </table>
              </div>
            </div>
        </div>
      </div>
      <div id="leftarea" class="sidebar">
        <div class="searchform">
          <form id="formsearch" name="formsearch" method="post" action="/PPM_table">
            <span>
            <input name="editbox_search" class="editbox_search" id="editbox_search" maxlength="80" placeholder="PPM" type="text" />
            </span>
              <button name="button_search"  class="button_search" type="image" ><img src="images/search.gif"></button>
          </form>
        </div>
        
        <div class="clr"></div>
        <div class="gadget">
          <h2 class="star"><span>Sidebar</span> Menu</h2>
          <div class="clr"></div>
